{
    "compilerOptions": {
        "incremental": false,
        "moduleResolution": "node",
        "inlineSources": false,
        "removeComments": true,
        "sourceMap": false,
        "target": "ES2018",
        "skipLibCheck": true,
        "lib": ["ESNEXT", "DOM"],
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "importHelpers": true,
        "strict": true,
        "resolveJsonModule": true
    },
    "include": ["src/**/*", "test/**/*", "bench/**/*", "eslint.config.js"],
    "exclude": ["node_modules"]
}
