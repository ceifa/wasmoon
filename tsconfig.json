{
    "extends": "@luvies/config/tsconfig.base.json",
    "compilerOptions": {
        "noImplicitAny": true,
        "importHelpers": false,
        "incremental": false,
        "moduleResolution": "node",
        "inlineSources": true,
        "removeComments": true,
        "sourceMap": true,
        "target": "ES2017",
        "skipLibCheck": true,
        "lib": ["ES2017", "DOM"]
    },
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules"]
}
